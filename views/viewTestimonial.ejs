        <h1>
            collections
        </h1>
        <ul>
            <li class="db"> <span class="collections"><a href="/admin/viewEvents">events</a></span>
                <div>
                    <a href="/addEvent">
                        <p>
                            <i class="fa-solid fa-plus"></i>
                            add
