            </li>
        </ul>
    </section>
        <!-- addEvent.ejs -->
    <section>
        <% if (locals.error) { %>
            <div class="alert alert-danger " style="width: 300px;" role="alert">
              <%= error %>
            </div>
          <% }else if (locals.message){ %>
          <div class="alert alert-success " style="width: 300px;" role="alert">
            <%= message %>
          </div> 
          <% } %>
        <div class="viewEvents-head">
            <h1>view Testimonial</h1>
            <div class="inner-viewevents-head">
                <span class="deleted-span">
                    deleted!
                </span>
                <a href="/admin/addTestimonial">
                    <button >
                    add testimonial
                    </button>
                </a>
            </div>

        </div>
        <div class="events-container">
            <ul class="">
                <% testimonial.forEach(testimonial => { %>
                <div class="veiwEvent" >
                    <div>
                        <li class="events"><a href="/editTestimonial/<%= testimonial._id %>"><%= testimonial.name %></a></li>
                    </div>
                    <div class="deleted-button" data-event-id="<%= testimonial._id %>"><a href="/deleteTestimonial/<%= testimonial._id %>"><i class="fa-solid fa-trash"></i></a></div>
                </div>
                <% }); %>
            </ul>
        </div>
    </section>
</div>
