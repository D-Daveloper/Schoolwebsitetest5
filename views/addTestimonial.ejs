    <section class="add-form">
        <h1>Add Testimonial</h1>
        <form action="/admin/addTestimonial" method="POST" enctype="multipart/form-data" id="addTestimonailForm">
            <div class="form">
                <label for="title">Name:</label>
                <input type="text" id="title" name="name" required autocomplete="off"><br>
                
            </div>

            <div class="form">
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" required></textarea><br>
            </div>

            <div class="form">
                <label for="eventImage">Image:</label>
                <input type="file" id="eventImage" name="testimonialImage" accept="image/*" required><br>
            </div>

            <div class="button">
                <button type="submit">Add Testimonial</button>
                <!-- <div class="span">
                    <span>saved!!</span>
                </div>                 -->
                <% if (locals.error) { %>
                    <div class="alert alert-danger p-2 rounded-sm mb-0" style="margin-left: 10px;" role="alert">
                      <%= error %>
                    </div>
                  <% }else if (locals.message){ %>
                  <div class="alert alert-success p-2 rounded-sm mb-0" style="margin-left: 10px;" role="alert">
                    <%= message %>
                  </div> 
                  <% } %>     
            </div>
        </form>
    </section>
