<%- include("partials/eventsHeader.ejs") %>

<section class="events-image-background">
</section>
<section class="events-header-section ">
  <div class="container2 " >
    <div class="event-header">
      <h2 class="text-4xl font-bold"><span class="event-span ">Event</span>s</h2>
      <p class="">
        Experience exciting events that inspire, educate, and entertain. From
        community gatherings to educational workshops, our diverse events cater
        to all interests and ages, fostering a vibrant and engaging atmosphere
        for all participants.
      </p>
    </div>

    <div class="event-cards-container">
        <% if(event && event.length > 0){ %> 
            <% event.forEach(Event => { %>
                <div class="event-card fade-in-up">
                    <div class="event-image-container">
                        <img src="<%= Event.image %>" alt="">
                    </div>
                    <div class="event-content-container">
                        <h2 class="event-card-title">
                            <%= Event.title %>
                        </h2> 
                        <p class="event-content">
                            <%= Event.description %>
                        </p>
                        <div class="event-date-container">
                            <p class="event-date">
                                coming up: <%= new Date(Event.date).toDateString() %>
                            </p>
                            <button class="event-button">
                                read more
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="mb-32 mx-auto font-bold text-3xl opacity-50">
                <p>Oops! No events at this time.</p>
            </div>
        <% } %>
    </div>
  </div>
</section>
<%- include("partials/footer_events.ejs") %>
